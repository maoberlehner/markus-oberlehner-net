    "lint": "eslint gulpfile.js test/**/*.js && stylelint themes/**/*.scss",
    "test": "NODE_ENV=test npm run build && testcafe -e chrome test/ --app 'http-server -p 1337 -s'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maoberlehner/markus-oberlehner-net"
  },
